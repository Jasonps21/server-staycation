<div class="tab-pane fade" id="add-item" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/item" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Title</label>
                    <input type="text" class="form-control" name="title" placeholder="Title" required>
                </div>
                <div class="form-group">
                    <label for="name">Price</label>
                    <input type="text" class="form-control" name="price" placeholder="Price" required>
                </div>
                <div class="form-group">
                    <label for="name">City</label>
                    <input type="text" class="form-control" name="city" placeholder="City" required>
                </div>
                <div class="form-group">
                    <label for="name">Category</label>
                    <select type="text" class="form-control" name="categoryId">
                        <option value="">-- Category --</option>
                        <% for(let i= 0; i< category.length; i++) { %>
                        <option value="<%= category[i].id %>"><%= category[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class=" form-group">
                    <label for="name">Image</label>
                    <input type="file" class="form-control" name="image" required multiple>
                </div>
                <div class="form-group">
                    <label for="name">Description</label>
                    <textarea class="form-control" name="about"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>